#This is a really early design that will probably change drastically.

vec2 : addable has
    comp : addable #component
    x : comp, y : comp
    func init(x : comp, y : comp) = vec2 with x, y
    func init() = vec2 with x = 0, y = 0
    func drop()
        print("Drop point")
    addable.add(self, other) = vec2 with
        x = self.x + other.x
        y = self.y + other.y

func main() int32
    var foo = vec2 with x = 1, y = 0
    foo += vec2 with x = 2, y = 2
    val bar = foo
    return 0